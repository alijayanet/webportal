<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            min-height: 100vh;
        }
        .navbar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 1rem 2rem;
        }
        .navbar-brand {
            color: white !important;
            font-weight: 600;
        }
        .main-container {
            padding: 2rem;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .card-header {
            background: white;
            border-bottom: 1px solid #eee;
            padding: 1.5rem;
            border-radius: 15px 15px 0 0 !important;
        }
        .card-body {
            padding: 1.5rem;
        }
        .info-box {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        .info-label {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }
        .info-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2d3748;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-wifi me-2"></i>Router Management
            </a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">
                    <i class="fas fa-user me-2"></i><%= deviceData.username %>
                </span>
                <a href="/logout" class="btn btn-light btn-sm">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="container main-container">
        <% if (error) { %>
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error %>
            </div>
        <% } %>

        <!-- Device Info Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-router me-2"></i>Informasi Perangkat
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">
                                <i class="fas fa-microchip me-2"></i>Model
                            </div>
                            <div class="info-value"><%= deviceData.model %></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">
                                <i class="fas fa-barcode me-2"></i>Serial Number
                            </div>
                            <div class="info-value"><%= deviceData.serialNumber %></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">
                                <i class="fas fa-wifi me-2"></i>SSID
                            </div>
                            <div class="info-value"><%= deviceData.ssid %></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">
                                <i class="fas fa-users me-2"></i>User Terhubung
                            </div>
                            <div class="info-value">
                                <%= parseInt(deviceData.userConnected) > 0 ? deviceData.userConnected + ' perangkat' : 'Tidak ada' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- WiFi Settings Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-wifi me-2"></i>Pengaturan WiFi
                </h5>
            </div>
            <div class="card-body">
                <!-- SSID Form -->
                <form id="ssidForm" class="mb-4">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="ssid" class="form-label">SSID (Nama Jaringan WiFi)</label>
                                <input type="text" class="form-control" id="ssid" name="ssid" 
                                       value="<%= deviceData.ssid %>" required>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100" id="updateSsidBtn">
                                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                <i class="fas fa-save me-2"></i>Update SSID
                            </button>
                        </div>
                    </div>
                </form>

                <hr>

                <!-- Password Form -->
                <form id="passwordForm">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="password" class="form-label">Password WiFi</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" 
                                           name="password" placeholder="Masukkan password baru" minlength="8">
                                    <button type="button" class="btn btn-outline-secondary" 
                                            onclick="togglePasswordVisibility('password')">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Minimal 8 karakter</small>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100" id="updatePasswordBtn">
                                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                <i class="fas fa-key me-2"></i>Update Password
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password visibility
        function togglePasswordVisibility(inputId) {
            const input = document.getElementById(inputId);
            const type = input.type === 'password' ? 'text' : 'password';
            input.type = type;
        }

        // Handle SSID update
        document.getElementById('ssidForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const ssid = document.getElementById('ssid').value;
            const button = document.getElementById('updateSsidBtn');
            const spinner = button.querySelector('.spinner-border');
            
            try {
                button.disabled = true;
                spinner.classList.remove('d-none');
                
                const response = await fetch('/update-wifi/ssid', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ ssid })
                });
                
                const data = await response.json();
                alert(data.message || data.error);
                if (data.success) {
                    location.reload();
                }
            } catch (error) {
                alert('Gagal mengupdate SSID');
            } finally {
                button.disabled = false;
                spinner.classList.add('d-none');
            }
        });

        // Handle password update
        document.getElementById('passwordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const password = document.getElementById('password').value;
            const button = document.getElementById('updatePasswordBtn');
            const spinner = button.querySelector('.spinner-border');
            
            try {
                button.disabled = true;
                spinner.classList.remove('d-none');
                
                const response = await fetch('/update-wifi/password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password })
                });
                
                const data = await response.json();
                alert(data.message || data.error);
                if (data.success) {
                    document.getElementById('password').value = '';
                }
            } catch (error) {
                alert('Gagal mengupdate password');
            } finally {
                button.disabled = false;
                spinner.classList.add('d-none');
            }
        });
    </script>
</body>
</html>